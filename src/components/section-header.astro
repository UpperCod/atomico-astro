---
import imgLogo from "../../public/logo.svg";
import { menuHeader, menuModal } from "../data";
import {
  SiteEye,
  SiteHeader,
  SiteLink,
  SiteMenu,
  SiteSocials,
  SiteText,
  SiteRow,
  SiteSection,
} from "@atomico/site";
---

<SiteHeader>
  <img src={imgLogo.src} slot="logo" />
  {
    menuHeader.map((data) => (
      <SiteLink href={data.href} slot="link" target="_blank">
        {data.title}
      </SiteLink>
    ))
  }
  <SiteMenu slot="action">
    <SiteEye class="eye" />
    <SiteSection>
      {
        menuModal.map((data) => (
          <SiteRow>
            <SiteText elegant color="accent">
              {data.title}
            </SiteText>
            <SiteRow flex>
              {data.items.map((data) => (
                <SiteLink href={data.href} target="_blank">
                  {data.title}
                </SiteLink>
              ))}
            </SiteRow>
          </SiteRow>
        ))
      }
    </SiteSection>
  </SiteMenu>
  <SiteSocials
    twitter="atomicojs"
    github="atomicojs"
    discord="atomicojs"
    youtube="atomicojs"
    slot="action"
  />
</SiteHeader>

---
import logoIbmIx from "../../public/logos/logo-ibm-ix.svg";
import logo2Brains from "../../public/logos/logo-2brains.svg";
import logoBarmer from "../../public/logos/logo-barmer.svg";
import logoCajaLosAndes from "../../public/logos/logo-caja-los-andes.png";
import logoClinicaAlemana from "../../public/logos/logo-clinica-alemana.png";
import logoNacionalMonteDePiedad from "../../public/logos/logo-nacional-monte-de-piedad.png";
import logoVidaSecurity from "../../public/logos/logo-vida-security.svg";
import logoUpper from "../../public/logos/logo-upper.svg";
import logoMasPractica from "../../public/logos/logo-mas-practica.png";
import {
  SiteSection,
  SiteTitle,
  SiteRow,
  SiteCard,
  SiteText,
} from "@atomico/site";
---

<SiteSection>
  <SiteRow colsMd="55% auto" gap={7}>
    <SiteRow>
      <SiteTitle>
        <h2>They trust the use of Atomico JS</h2>
      </SiteTitle>
      <SiteText>
        We thank all the developers and companies that make it possible to use
        Atomico in their projects.
        <br />
        <br />
         If you already use Atomico we want to know your experience, doubts or
        ideas.
      </SiteText>
    </SiteRow>
    <SiteRow colsMd="1fr 1fr 1fr">
      <SiteCard class="image-center">
        <img
          width="140"
          height="90"
          loading="lazy"
          src={logoIbmIx.src}
          alt="Logo Ibm iX"
        />
      </SiteCard>
      <SiteCard class="image-center">
        <img
          width="140"
          height="90"
          loading="lazy"
          src={logo2Brains.src}
          alt="Logo Ibm iX"
        />
      </SiteCard>
      <SiteCard class="image-center">
        <img
          width="140"
          height="90"
          loading="lazy"
          src={logoBarmer.src}
          alt="Logo Ibm iX"
        />
      </SiteCard>
      <SiteCard class="image-center">
        <img
          width="140"
          height="90"
          loading="lazy"
          src={logoNacionalMonteDePiedad.src}
          alt="Logo Ibm iX"
        />
      </SiteCard>
      <SiteCard class="image-center">
        <img
          width="140"
          height="90"
          loading="lazy"
          src={logoCajaLosAndes.src}
          alt="Logo Ibm iX"
        />
      </SiteCard>
      <SiteCard class="image-center">
        <img
          width="140"
          height="90"
          loading="lazy"
          src={logoClinicaAlemana.src}
          alt="Logo Ibm iX"
        />
      </SiteCard>
      <SiteCard class="image-center">
        <img
          width="140"
          height="90"
          loading="lazy"
          src={logoVidaSecurity.src}
          alt="Logo Ibm iX"
        />
      </SiteCard>
      <SiteCard class="image-center">
        <img
          width="140"
          height="90"
          loading="lazy"
          src={logoUpper.src}
          alt="Logo Ibm iX"
        />
      </SiteCard>
      <SiteCard class="image-center">
        <img
          width="140"
          height="90"
          loading="lazy"
          src={logoMasPractica.src}
          alt="Logo Ibm iX"
        />
      </SiteCard>
    </SiteRow>
  </SiteRow>
</SiteSection>
